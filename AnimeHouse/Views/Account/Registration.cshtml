@model UserRegistrationViewModel
<!doctype html>
<html>
	<head>
		<title>Home Page</title>
				<link rel="stylesheet" href="/css/StyleSheet.css">
		<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
		<link href="/css/style.css" rel="stylesheet">
		<meta charset="utf-8" />
	</head>
	<body class="reg_log">
		<header>
		<input  type="checkbox" id="burger"/>
		<label for="burger">&#8801</label>
		<nav>
				
			<ul class="nav_bar">
				<li class="nav-bar-element"><p>AnimeHouse</p></li>
				<li class="nav-bar-element page-controllers"><a class="active" asp-action="Main" asp-controller="Home">Home</a></li>
				<li class="nav-bar-element page-controllers"><a asp-action="DevelopersPage" asp-controller="Home">DevPage</a></li>
				@if (User.IsInRole("admin") || @User.IsInRole("moderator"))
				{
					<li  class="nav-bar-element page-controllers"><a asp-action="UserList" asp-controller="Admin">User's List</a></li>
					<li   class="nav-bar-element page-controllers"><a asp-action="CreateTitle" asp-controller="Admin" >Create Title</a></li>
				}
				<li   class="nav-bar-element page-controllers"><a asp-action="GetListAnime" asp-controller="Anime">Anime</a></li>
				@if(User.Identity.IsAuthenticated) {
					<li  class="nav-bar-element page-controllers"><a asp-action="Services" asp-controller="Profile">@User.Identity.Name</a></li>
		
					<li  class="nav-bar-element page-controllers">
						<form method="post" asp-controller="Account" asp-action="Logout">
							<input type="submit" value="Выход" />
						</form>
					</li>
				}
				else {
					<li  class="nav-bar-element page-controllers"><a asp-controller="Account" asp-action="Login">Login</a></li>
					<li  class="nav-bar-element page-controllers"><a asp-controller="Account" asp-action="Registration">Registration</a></li>
				}
				<li   class="nav-bar-element page-controllers" id="notice"><label for="notice_box"><img src="/img/bell.png" width="30px" height="30px"></label></li>

			</ul>
		</nav>
	</header>
		<div class="center_form">
			<h2>Регистрация</h2>
			<form method="post">
					<div class="text-field">
							<label asp-for="Email" class="text-field__label">Email</label><br />
							<input type="email" asp-for="Email" class="text-field__input" />
							<span asp-validation-for="Email" class="span_erros" />
					</div>
					<div class="text-field">

							<label asp-for="Nickname" class="text-field__label">Nickname</label><br />
							<input type="text" asp-for="Nickname" class="text-field__input" />
							<span asp-validation-for="Nickname" class="span_erros"/>
					</div>
					<div class="text-field">

							<label asp-for="Password" class="text-field__label">Password</label><br />
							<input type="password" asp-for="Password" class="text-field__input"  />
							<span asp-validation-for="Password" class="span_erros"/>
					</div>
					<div class="text-field">

							<label asp-for="PasswordConfirm" class="text-field__label">Password Confirm</label><br />
							<input type="password" asp-for="PasswordConfirm" class="text-field__input" />
							<span asp-validation-for="PasswordConfirm" class="span_erros" />
					</div>
					<div class="text-field">
						<button type="submit" class="form-button">Register</button>
					</div>
			</form>
		</div>
		<script src="~/js/jquery-3.5.1.min.js"></script>
		<script src="~/js/jquery.validate.min.js"></script>
		<script src="~/js/jquery.validate.unobtrusive.min.js"></script>

	</body>
	<footer>
			<div class="social">
				<a class="icons instagram" href="#">
					<i class="fab fa-instagram"></i>
				</a>
				<a class="icons youtube" href="#">
					<i class="fab fa-youtube"></i>
				</a>
				<a class="icons git" href="#">
					<i class="fab fa-github"></i>
				</a>
				<a class="icons telegram" href="#">
					<i class="fab fa-telegram"></i>
				</a>
				<a class="icons odnoklassniki" href="#">
					<i class="fab fa-odnoklassniki"></i>
				</a>
				<a class="icons vk" href="#">
					<i class="fab fa-vk"></i>
				</a>
			</div>
		</footer>
</html>